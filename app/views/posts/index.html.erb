<h1>Posts</h1>
<div class="posts">

  <div >
    <%= link_to "Nuevo post", new_post_path %>
  </div>

  <% @posts.each do |post| %>
    <div class="post">
      <h3><%= link_to post.title, post_path(post) %></h3>
      <p><%= post.content %></p>
      <ul>
        <li><%= link_to "Editar", edit_post_path(post)%></li>
        <li><%= link_to "Borrar", post_path(post), data: {
          confirm: "Estas seguro que deseas borrar: #{post.title}?" }, method: :delete%></li>
      </ul>
    </div>
  <% end %>
</div>
